@model Shop.web.Models.SalesSummaryModel

@{
    ViewData["Title"] = "SalesSummaryEntry";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>SalesSummaryEntry</h1>

<h4>SalesSummaryModel</h4>
<hr />
@using (Html.BeginForm("SalesSummaryEntry", "SalesSummary", FormMethod.Post))
{ 
    <div class="form-group">
        <label asp-for="TotalQty" class="control-label"></label>
        <input asp-for="TotalQty" class="form-control" />
        <span asp-validation-for="TotalQty" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TotalVat" class="control-label"></label>
        <input asp-for="TotalVat" class="form-control" />
        <span asp-validation-for="TotalVat" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="TotalDiscount" class="control-label"></label>
        <input asp-for="TotalDiscount" class="form-control" />
        <span asp-validation-for="TotalDiscount" class="text-danger"></span>
    </div> 
    <div class="mb-3">
        <label asp-for="Customers.Name" class="control-label"></label>
        <select asp-for="CustomerId" asp-items="ViewBag.modList" class="form-select"></select>
        <span asp-validation-for="CustomerId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div> 
}

<div>
    <a asp-action="Index">Back to List</a>
</div>

