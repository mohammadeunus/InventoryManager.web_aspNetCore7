@model Shop.web.Models.ProductModel

@{
    ViewData["Title"] = "ProductEntry";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Product Entry</h1>

<hr />

@using (Html.BeginForm("SaveProduct", "ProductModels", FormMethod.Post))
{ 
        <div class="form-group">
            <label asp-for="Name" class="control-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Price" class="control-label"></label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="VatPercent" class="control-label"></label>
            <input asp-for="VatPercent" class="form-control" />
            <span asp-validation-for="VatPercent" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="DiscountPercent" class="control-label"></label>
            <input asp-for="DiscountPercent" class="form-control" />
            <span asp-validation-for="DiscountPercent" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="control-label"></label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div> 

        <div class="mb-3">
            <label asp-for="Category" class="control-label"></label>
            <select asp-for="CategoryId" asp-items="ViewBag.modList" class="form-select"></select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>
         
        <br />

        <input type="submit" value="Save" class="btn btn-primary" />
}

<hr />
<div>
    <a asp-action="Index">Product Database</a>
</div>